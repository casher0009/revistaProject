<div class="event-details">
    <div class="event-header">
        <h3 id="fechaEvento">
            <span id="formatedHour">{{event.date}}</span>
        </h3>
        <h2>{{event.eventName}}</h2>
        <sub>Aportado por nuestro usuario:
            <i>{{user.username}}</i>
        </sub>
    </div>
    <div class="event-info">
        <div class="left-info">
            <img src={{event.photoURL}} alt="event_picture" height="300px" width="600px">
            <h3>Detalles del evento</h3>
            <p id="event-description">
                {{event.description}}
            </p>
        </div>
        <div class="div-location">
            <div id="event-text">
                <h3>
                    <i class="fas fa-map-marker-alt"></i> {{event.location.address}}</h3>
                <p>{{event.cost}}</p>
                <p>{{event.recomendedAge}}</p>
            </div>
            <div id="mapita"></div>
        </div>
    </div>
</div>

