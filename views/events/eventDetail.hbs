        origin: new google.maps.Point(0, 0),
        anchor: new google.maps.Point(17, 34),
        scaledSize: new google.maps.Size(35, 35)

    }
    const marker = new google.maps.Marker({
        map,
        icon: icono,
        position: center,
        title,
        animation: google.maps.Animation.BOUNCE
    })

</script>